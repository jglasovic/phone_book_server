{
  "name": "phone_book_backend",
  "version": "1.0.0",
  "description": "phone-book server with mongodb",
  "main": "index.js",
  "repository": "https://github.com/jglasovic/phone_book_server.git",
  "author": "jglasovic",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "./node_modules/nodemon/bin/nodemon.js",
    "dev": "node --inspect=5222 -r dotenv/config -r ts-node/register src",
    "prod": "npm-run-all clean build start:server",
    "start:server": "NODE_ENV=production node index.js",
    "build": "tsc",
    "build-watch": "tsc -w",
    "clean": "rm -rf dist",
    "pm2": "npm-run-all clean build pm2-start",
    "pm2-start": "pm2 start ./pm2Config/pm2.config.js",
    "pm2-monitor": "pm2 monitor",
    "test": "mocha -r ts-node/register src/**/*.test.ts",
    "mongoDB": "mongod -dbpath ./data/db"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-http": "^3.0.5",
    "@types/config": "^0.0.34",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.11.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.2.2",
    "@types/node": "^9.6.5",
    "@types/winston": "^2.3.9",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.3",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "config": "^1.30.0",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "http-status-codes": "^1.3.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.5",
    "npm-run-all": "^4.1.3",
    "pm2": "^3.0.0",
    "winston": "^2.4.1",
    "winston-log-and-exit": "^1.0.6"
  }
}
