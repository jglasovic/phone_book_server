    "/users/login": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Login",
        "description": "Logging user into system.",
        "operationId": "createUser",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "user object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/LoginInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Token and user informations",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/LoginOutput"
            }
          },
          "203": {
            "description": "NON_AUTHORITATIVE_INFORMATION",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/FirstLoginOutput"
            }
          },
          "422": {
            "description": "UNPROCESSABLE_ENTITY",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/LoginWrongInput"
            }
          }
        }
      }
    },
    "/users/logout": {
